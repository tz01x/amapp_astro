---
import Button from "@mui/material/Button";
const NavitemClass = true;
---

<nav>
  <div class="nev-brand">ShadowMsg</div>
  <div class="nev-items">
    <div class="nev-item">
      <a href="/#whatsThis">Whats This?</a>
    </div>
    <div class="nev-item">
      <a href="/#faq">FAQ</a>
    </div>
  </div>
  <Button
    sx={{
      fontSize: "19px",
      borderRadius: 25,
      backgroundColor: "var(--secondary)",
      "&:hover": {
        backgroundColor: "var(--primary-light)",
      },
    }}
    size="large"
    variant="filled"
    client:visible
  >
    APP
  </Button>
</nav>

<style>
  nav {
    padding: 10px;
    display: flex;
    flex-grow: 1;
    justify-content: space-around;
    align-items: baseline;
    width: 70%;
    margin: auto;
  }

  nav .nev-items {
    display: flex;
    margin-left: auto;
  }
  nav .nev-item {
    text-transform: uppercase;
    text-shadow: 0px 0px 1px;
    padding: 10px;
    font-weight: 700;
    font-size: 15px;

    cursor: pointer;
    /* border-radius: 10px; */
  }
  nav .nev-item a {
    text-decoration: none;
    color: white;
  }

  nav .nev-brand {
    margin-top: 10px;
    font-size: 25px;
    font-weight: 600;
    color: rgb(111, 201, 150);
    text-shadow: 0px 2px 2px #000000;
  }
</style>
